<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/mini_padding"
    android:paddingTop="@dimen/mini_padding">

    <TextView
        android:id="@+id/webTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/mini_padding"
        android:paddingStart="@dimen/mini_padding"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        tools:text="News TITLE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/author_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/mini_padding"
            android:paddingStart="@dimen/mini_padding"
            android:textSize="@dimen/normal_text_size"
            tools:text="Author" />

        <TextView
            android:id="@+id/news_webPublicationDate_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/mini_padding"
            android:paddingStart="@dimen/mini_padding"
            android:textSize="@dimen/normal_text_size"
            tools:text="News Date" />
    </LinearLayout>

    <TextView
        android:id="@+id/section_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mini_padding"
        android:background="@color/colorTag"
        android:paddingEnd="@dimen/mini_padding"
        android:paddingStart="@dimen/mini_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="italic"
        tools:text="News TAG" />

</LinearLayout>
